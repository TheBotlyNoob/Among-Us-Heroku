#!/bin/bash

set -eu
set -e

indent() {
  sed -u 's/^/       /'
}

export_env_dir() {
  env_dir=$1
  whitelist_regex=${2:-''}
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH|JAVA_OPTS)$'}
  if [[ -d "$env_dir" ]]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

BP_DIR="$(cd "$(dirname "$0")" && pwd)"
BUILD_DIR=$1
CACHE_DIR=$2
OPT_DIR=$BP_DIR/../opt/
export_env_dir $3

find $BUILD_DIR -delete

mkdir -p $BP_DIR/opt/Server

if [[ -n ${PLUGIN_URL+x} ]]; then
    echo "-----> Installing Plugins..."
    dest="${BP_DIR}/opt/Server"
    wget -q "$PLUGIN_URL" -P $dest
    file="$dest/$(basename "$PLUGIN_URL")"
    extension="${file##*.}"
    if [[ "$extension" = "gz" ]];then
        tar -xf "$file" --strip-components=1 -C "$dest"
    else
        mv "$file" "$dest/plugins/$(basename "$file")"
    fi
fi

echo "-----> Installing Dependencies"

mkdir -p "$CACHE_DIR/apt/cache/archives/partial"
mkdir -p "$CACHE_DIR/apt/state/lists/partial"
apt-get -o debug::nolocking=true -o dir::cache=$CACHE_DIR/apt/cache -o dir::state=$CACHE_DIR/apt/state update -y | indent
apt-get -o debug::nolocking=true -o dir::cache=$CACHE_DIR/apt/cache -o dir::state=$CACHE_DIR/apt/state -y --allow-downgrades --allow-remove-essential --allow-change-held-packages -d install --reinstall libpci-dev libnss3-dev libgdk-pixbuf2.0-dev libgtk-3-dev libxss-dev libgbm-dev libasound2 nodejs npm | indent

#Set environment variables for every startup
mkdir -p $BUILD_DIR/.profile.d
cat <<EOF >$BUILD_DIR/.profile.d/000_apt.sh
export DOTNET_ROOT="\$HOME/bin/dotnet"
export PATH="\$HOME/.apt/usr/bin:\$HOME/node_modules:\$HOME/bin/php/bin:\$HOME/bin/dotnet:\$HOME/bin/Server:\$PATH"
export LD_LIBRARY_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu:\$HOME/.apt/usr/lib/i386-linux-gnu:\$HOME/.apt/usr/lib:\$LD_LIBRARY_PATH"
export LIBRARY_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu:\$HOME/.apt/usr/lib/i386-linux-gnu:\$HOME/.apt/usr/lib:\$LIBRARY_PATH"
export INCLUDE_PATH="\$HOME/.apt/usr/include:\$INCLUDE_PATH"
export CPATH="\$INCLUDE_PATH"
export CPPPATH="\$INCLUDE_PATH"
export PKG_CONFIG_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu/pkgconfig:\$HOME/.apt/usr/lib/i386-linux-gnu/pkgconfig:\$HOME/.apt/usr/lib/pkgconfig:\$PKG_CONFIG_PATH"
export PYTHONPATH="\$HOME/.apt/usr/lib/python2/dist-packages"
EOF

#Install the downloaded packages above
for DEB in $(ls -1 $CACHE_DIR/apt/cache/archives/*.deb);do dpkg -x $DEB $BUILD_DIR/.apt/;done

#Set LD_LIBRARY_PATH for node
export LD_LIBRARY_PATH="$BUILD_DIR/.apt/usr/lib/x86_64-linux-gnu"
cp $BP_DIR/../package.json $BUILD_DIR/
$BUILD_DIR/.apt/usr/bin/node $BUILD_DIR/.apt/usr/bin/npm install --prefix=$BUILD_DIR

#Copy files and give files execution permissions
cp -R $OPT_DIR/. $BUILD_DIR/bin/
cp -R $BP_DIR/../web/. $BUILD_DIR/bin/
cp $BP_DIR/../Procfile $BUILD_DIR/

chmod +x $BUILD_DIR/bin/web
chmod +x $BUILD_DIR/bin/worker
chmod +x $BUILD_DIR/bin/proxy
